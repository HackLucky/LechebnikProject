<Window x:Class="LechebnikProject.Views.MedicineDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали препарата" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding SelectedMedicine.Name}" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding SelectedMedicine.Form}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding SelectedMedicine.Price, StringFormat='Цена: {0:C}'}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding SelectedMedicine.StockQuantity, StringFormat='В наличии: {0}'}" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding SelectedMedicine.RequiresPrescription, StringFormat='Рецепт: {0}'}" Margin="0,0,0,5"/>
            <Button Content="Назад" Command="{Binding GoBackCommand}" Width="100" Height="30" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>