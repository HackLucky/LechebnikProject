<Window x:Class="LechebnikProject.Views.QuantityInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод количества" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding SelectedMedicine.Name}" Margin="0,0,0,10"/>
            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="100" Height="25" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Добавить" Command="{Binding AddCommand}" Width="100" Height="30" Margin="5"/>
                <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>