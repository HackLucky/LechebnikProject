<Window x:Class="LechebnikProject.Views.ContactAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Связаться с администратором" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}" Height="100" AcceptsReturn="True" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Отправить" Command="{Binding SendCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Назад" Command="{Binding GoBackCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>