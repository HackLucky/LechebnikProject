<Window x:Class="LechebnikProject.Views.ClientRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация клиента" Height="500" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="LastNameTextBox"/>
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameTextBox"/>
            <TextBlock Text="Отчество (опционально):"/>
            <TextBox x:Name="MiddleNameTextBox"/>
            <TextBlock Text="Номер телефона:"/>
            <TextBox x:Name="PhoneNumberTextBox"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Код (6 символов):"/>
            <PasswordBox x:Name="CodePasswordBox"/>
            <TextBlock Text="Скидка:"/>
            <ComboBox x:Name="DiscountComboBox" SelectedValue="{Binding SelectedDiscount}">
                <ComboBoxItem Content="15%" Tag="15.00"/>
                <ComboBoxItem Content="25%" Tag="25.00"/>
                <ComboBoxItem Content="50%" Tag="50.00"/>
                <ComboBoxItem Content="75%" Tag="75.00"/>
            </ComboBox>
            <TextBlock Text="Введите код с изображения:"/>
            <Image Source="{Binding CaptchaImage}" Width="100" Height="30"/>
            <TextBox x:Name="CaptchaTextBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Width="120"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="120" Margin="10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>