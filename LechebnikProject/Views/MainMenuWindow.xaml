<Window x:Class="LechebnikProject.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="500" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Список препаратов" Command="{Binding GoToMedicineListCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Корзина" Command="{Binding GoToCartCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Добавить препарат" Command="{Binding GoToAddMedicineCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Отчётность" Command="{Binding GoToReportsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Список рецептов" Command="{Binding GoToPrescriptionsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Профиль" Command="{Binding GoToProfileCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Связь с администратором" Command="{Binding GoToContactAdminCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Панель администратора" Command="{Binding GoToAdminPanelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Width="200" Height="30" Margin="0,5" Visibility="{Binding CurrentUser.Role, Converter={StaticResource RoleToVisibilityConverter}}"/>
            <Button Content="Выход" Command="{Binding ExitCommand}" Width="200" Height="30" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>