<Window x:Class="LechebnikProject.Views.ClientLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация клиента" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Код:"/>
            <PasswordBox x:Name="CodePasswordBox"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Войти" Click="LoginButton_Click" Width="120"/>
                <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Width="120" Margin="10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>