<Window x:Class="LechebnikProject.Views.ManageUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛЕЧЕБНИК [окно управления пользователями]" Height="540" Width="960" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Поиск:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="850" Margin="5" VerticalContentAlignment="Center"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding CombinedList}" AutoGenerateColumns="False" SelectedItem="{Binding SelectedItem}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Скидка" Binding="{Binding Discount}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Добавить" Command="{Binding AddUserCommand}" Width="100" Margin="5"/>
            <Button Content="Сменить роль" Command="{Binding ChangeRoleCommand}" Width="100" Margin="5"/>
            <Button Content="Блокировать/Разблокировать" Command="{Binding BlockUserCommand}" Width="200" Margin="5"/>
            <ComboBox Width="100" Margin="5" SelectedValue="{Binding SelectedDiscount}">
                <ComboBoxItem Content="15%" Tag="15.00"/>
                <ComboBoxItem Content="25%" Tag="25.00"/>
                <ComboBoxItem Content="50%" Tag="50.00"/>
                <ComboBoxItem Content="75%" Tag="75.00"/>
            </ComboBox>
            <Button Content="Изменить скидку" Command="{Binding ChangeDiscountCommand}" Width="150" Margin="5"/>
            <Button Content="Вернуться к панели администратора" Command="{Binding GoBackCommand}" Width="250" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>