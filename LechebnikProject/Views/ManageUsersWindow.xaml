<Window x:Class="LechebnikProject.Views.ManageUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление пользователями" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding Users}" AutoGenerateColumns="True" SelectedItem="{Binding SelectedUser}" IsReadOnly="True"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Добавить" Command="{Binding AddUserCommand}" Width="100" Margin="5"/>
            <Button Content="Редактировать" Command="{Binding EditUserCommand}" Width="100" Margin="5"/>
            <Button Content="Блокировать" Command="{Binding BlockUserCommand}" Width="100" Margin="5"/>
            <Button Content="Назад" Command="{Binding GoBackCommand}" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>