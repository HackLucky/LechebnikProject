<Window x:Class="LechebnikProject.Views.ManageReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЛЕЧЕБНИК [окно управления отчётами]" Height="540" Width="960" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" ItemsSource="{Binding Reports}" AutoGenerateColumns="True" 
                  SelectedItem="{Binding SelectedReport}" IsReadOnly="True" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Удалить отчёт" Command="{Binding DeleteReportCommand}" Width="200" Margin="5"/>
            <Button Content="Вернуться к главному меню" Command="{Binding GoBackCommand}" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>