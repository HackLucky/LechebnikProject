<Window x:Class="LechebnikProject.Views.ClientAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация клиента" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Логин клиента:"/>
        <TextBox x:Name="LoginTextBox"/>
        <TextBlock Text="Код клиента:"/>
        <PasswordBox x:Name="CodePasswordBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Войти" Click="LoginButton_Click" Width="100" Margin="5"/>
            <Button Content="Зарегистрировать" Click="RegisterButton_Click" Width="100" Margin="5"/>
            <Button Content="Пропустить" Click="SkipButton_Click" Width="100" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>